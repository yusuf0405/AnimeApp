<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AnimeApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e64a19</item>
        <item name="colorPrimaryDark">#e64a19</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">@color/apptheme_primary</item>
        <item name="itemTextColor">@color/types_value</item>
        <item name="android:fillColor">@color/black</item>
        <item name="android:background">@color/app_background</item>
        <item name="cardBackgroundColor">@color/app_background</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/app_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/black</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="android:textColor">#ffff</item>
        <!--     text and button color change to white to contrast with the app's background-->
    </style>


    <style name="plot_summary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="type_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/types_title</item>
        <item name="fontFamily">sans-serif</item>
    </style>


    <style name="type_des" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/apptheme_primary_dark</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="type_value" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#e64a19</item>
        <item name="colorPrimaryDark">#e64a19</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="itemIconTint">@color/apptheme_primary</item>
        <item name="itemTextColor">@color/types_value</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
</resources>